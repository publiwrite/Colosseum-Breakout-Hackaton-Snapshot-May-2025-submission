{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rights/app/*": ["apps/rights/app/*"],
      "@rights/lib/*": ["apps/rights/lib/*"],
      "@pw-fe-monorepo/configs": ["libs/configs/src/index.ts"],
      "@pw-fe-monorepo/configs/server": ["libs/configs/src/server.ts"],
      "@pw-fe-monorepo/ui": ["libs/ui/src/index.ts"],
      "@pw-fe-monorepo/ui/server": ["libs/ui/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
